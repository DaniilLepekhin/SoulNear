[Unit]
Description=SoulNear WebApp API
After=network.target postgresql.service

[Service]
Type=simple
User=root
WorkingDirectory=/home/SoulNear/webapp_api
Environment="PATH=/usr/bin:/usr/local/bin"
ExecStart=/usr/bin/python3 -m hypercorn app:app --bind 0.0.0.0:5000 --workers 2
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
