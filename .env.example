# ===========================================
# SoulNear Bot Configuration Example
# ===========================================
# Copy this file to .env.prod or .env.test and fill in your values

# Environment (prod/test/dev)
ENV=prod

# Telegram Bot Token
BOT_TOKEN=your_bot_token_here

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Assistants
HELPER_ID=your_helper_assistant_id_here
SOULSLEEP_ID=your_soulsleep_assistant_id_here
RELATIONSHIPS_ID=your_relationships_assistant_id_here
MONEY_ID=your_money_assistant_id_here
CONFIDENCE_ID=your_confidence_assistant_id_here
FEARS_ID=your_fears_assistant_id_here

# YooKassa Payment
SHOP_ID=476767
SECRET_KEY=your_yookassa_secret_key_here

# PostgreSQL Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=soul_bot

# API Port (for webapp_api)
API_PORT=8888

# Feature Flags (optional, all default to false)
USE_CHAT_COMPLETION=false
ENABLE_STYLE_SETTINGS=false
ENABLE_USER_PROFILES=false
ENABLE_PATTERN_ANALYSIS=false
ENABLE_DYNAMIC_QUIZ=false
ENABLE_ADAPTIVE_QUIZ=false
ENABLE_TUNE_STYLE=false

# Optional: ElevenLabs (if using voice)
ELEVEN_LABS_KEY=your_elevenlabs_key_here

